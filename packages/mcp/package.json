{
  "name": "wa-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Web Awesome components",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts | npx @modelcontextprotocol/inspector",
    "test": "vitest run",
    "lint": "eslint src/**/*.ts --fix",
    "fetch-data": "tsx scripts/fetch-components.ts",
    "docker:build": "docker build -t wa-mcp-server .",
    "docker:run": "docker run -p 3000:3000 wa-mcp-server"
  },
  "keywords": [
    "mcp",
    "web-awesome",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/express": "^5.0.5",
    "express": "^5.1.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/get-port": "^4.0.1",
    "@types/node": "^20.11.24",
    "@types/node-fetch": "^2.6.13",
    "eslint": "^9.38.0",
    "get-port": "^7.1.0",
    "node-fetch": "^2.7.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.6"
  }
}
